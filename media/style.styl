*
    margin 0
    padding 0
html,body 
    background-color #000000
    line-height 1.5
    font-family "Open Sans","Segoe UI","Helvetica",sans-serif
    -webkit-font-smoothing antialiased  //抗锯齿
    padding-top 27px
ul 
    li 
        list-style none
a 
    text-decoration none
.center
    text-align center
.very
    padding 0
    margin 0
.mainbody
    background #f8f8f8
    .noise
        background url(./white-noise.png)
        .tag-menu
            position relative
            .menu
                padding 0
                border-bottom 1px solid #ddd
                overflow visible
                li 
                    width: 24.5%
                    text-align center
                    margin-right 0
                    display inline-block
                    padding-top 5px
                    a 
                        display block
                        color #808080
                        padding 7px 23px
                        line-height 1.9
                        border-bottom 1px solid #dddddd
                        cursor pointer
                    .active
                        color #000000
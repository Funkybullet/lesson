<!--pages/my/my.wxml-->
<view class="container">
  <scroll-view>
    <view class="header">
      <view class="header_hd">
        <text>{{city}}</text>
        <view class="downtips"></view>
      </view>
      <view header_bd>
        <view class="header_bd-hot header_bd-btn">正在上映</view>
        <view class="header_bd-wating header_bd-btn">即将上映</view>
      </view>
      <view class="header_ft">
        <image src='../../images/caidan1.png' alt=''></image>
      </view>
    </view>
    <swiper indicator-dots="true" indicator-active-color="" autoplay="true">
      <block wx:for="{{imgUrls}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image" width="355" height="150" />
        </swiper-item>
  </scroll-view>
</view>